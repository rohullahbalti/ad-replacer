    def initialize_sam(self):
        """Initialize SAM model using your existing setup"""
        try:
            sam_checkpoint = "sam_vit_h_4b8939.pth"
            model_type = "vit_h"
            device = "cuda" if torch.cuda.is_available() else "cpu"

            # Initialize SAM model (using your existing code)
            sam = sam_model_registry[model_type](checkpoint=sam_checkpoint)
            sam.to(device=device)

            # Create mask generator with your parameters
            self.mask_generator = SamAutomaticMaskGenerator(
                model=sam,
                points_per_side=32,
                pred_iou_thresh=0.99,
                stability_score_thresh=0.92,
                crop_n_layers=1,
                crop_n_points_downscale_factor=2,
                min_mask_region_area=100,
            )

            print(f"‚úÖ SAM model initialized successfully on {device}!")

        except Exception as e:
            print(f"‚ùå Error initializing SAM: {e}")

    def safe_image_load(self, uploaded_file):
        """Safely load image from uploaded file - FIXED VERSION"""
        try:
            print(f"üîç Debug: Uploaded file type: {type(uploaded_file)}")
            print(f"üîç Debug: Uploaded file keys: {uploaded_file.keys()}")

            # For google.colab files.Upload, the structure has 'metadata' and 'content'
            if 'content' in uploaded_file:
                # This is the actual file content
                file_content = uploaded_file['content']

                # Get filename from metadata if available, otherwise use default
                filename = uploaded_file.get('metadata', {}).get('name', 'uploaded_image')
                print(f"üìÅ Processing: {filename}")
            else:
                # If it's already the content
                file_content = uploaded_file
                filename = "uploaded_image"

            # Create a BytesIO object to safely read the image
            image_buffer = io.BytesIO(file_content)
            image = Image.open(image_buffer)

            # Convert to RGB and numpy array
            image_rgb = image.convert("RGB")
            image_np = np.array(image_rgb)

            print(f"‚úÖ Image loaded successfully: {image_np.shape}")
            return image_np

        except Exception as e:
            print(f"‚ùå Error in safe_image_load: {e}")
            import traceback
            print(f"üîç Full traceback: {traceback.format_exc()}")
            return None

