    def apply_replacement(self, orig_mask_idx, rep_mask_idx):
        """Apply the final replacement"""
        print("üîÑ APPLYING REPLACEMENT...")

        try:
            # Original mask
            orig_mask = self.masks[orig_mask_idx]['segmentation'].astype(np.uint8) * 255
            ys, xs = np.where(orig_mask > 0)
            xmin, xmax = xs.min(), xs.max()
            ymin, ymax = ys.min(), ys.max()

            # Replacement mask
            rep_mask = self.replacement_masks[rep_mask_idx]['segmentation'].astype(np.uint8) * 255
            ys_r, xs_r = np.where(rep_mask > 0)
            xmin_r, xmax_r = xs_r.min(), xs_r.max()
            ymin_r, ymax_r = ys_r.min(), ys_r.max()

            # Crop & resize replacement
            replacement_object = Image.fromarray(self.replacement_image).crop((xmin_r, ymin_r, xmax_r, ymax_r))
            replacement_object_resized = replacement_object.resize((xmax-xmin, ymax-ymin), Image.Resampling.LANCZOS)
            replacement_mask_resized = Image.fromarray(rep_mask).crop((xmin_r, ymin_r, xmax_r, ymax_r)).resize((xmax-xmin, ymax-ymin), Image.Resampling.LANCZOS)

            # Paste replacement
            source_image = Image.fromarray(self.segmentation_image.astype(np.uint8)).convert("RGBA")
            output_image = source_image.copy()
            output_image.paste(replacement_object_resized, (xmin, ymin), replacement_mask_resized)

            # Display results
            plt.figure(figsize=(15, 5))

            plt.subplot(1, 3, 1)
            plt.imshow(self.segmentation_image)
            plt.title("Original Image")
            plt.axis('off')

            plt.subplot(1, 3, 2)
            plt.imshow(self.replacement_image)
            plt.title("Replacement Image")
            plt.axis('off')

            plt.subplot(1, 3, 3)
            plt.imshow(output_image)
            plt.title("Final Result")
            plt.axis('off')

            plt.tight_layout()
            plt.show()

            print("‚úÖ REPLACEMENT COMPLETED SUCCESSFULLY!")

            # Save and download options
            self.final_result = output_image

            download_btn = widgets.Button(
                description="üì• Download Result",
                button_style='success',
                layout=widgets.Layout(width='200px')
            )

            new_replacement_btn = widgets.Button(
