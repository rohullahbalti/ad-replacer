            download_btn.on_click(on_download_click)
            new_replacement_btn.on_click(on_new_replacement)
            restart_btn.on_click(on_restart_click)

            display(widgets.VBox([
                widgets.HTML("<h4>üéâ Replacement Completed!</h4>"),
                widgets.HBox([download_btn, new_replacement_btn, restart_btn])
            ]))

        except Exception as e:
